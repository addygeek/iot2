[Unit]
Description=Meeting Recorder API Server
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/meeting-recorder
Environment="PATH=/home/pi/meeting-recorder/venv/bin"
ExecStart=/home/pi/meeting-recorder/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target